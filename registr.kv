<RegisterScreen>:
    name: 'register'

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(40)
        spacing: dp(20)

        MDLabel:
            text: 'Регистрация'
            halign: 'center'
            font_style: 'H4'

        MDTextField:
            id: reg_email
            hint_text: 'Email'
            icon_left: 'email'

        MDTextField:
            id: reg_password
            hint_text: 'Пароль'
            icon_left: 'key'
            password: True

        MDRaisedButton:
            text: 'Зарегистрироваться'
            on_press: root.try_register()

        MDFlatButton:
            text: 'Уже есть аккаунт? Войти'
            on_press: root.switch_to_login()
